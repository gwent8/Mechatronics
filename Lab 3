#include <SparkFun_TB6612.h>
//#include <Servo.h>
//Servo myservo;
#define PWMA 11
#define PWMB 3
#define AIN1 2
#define AIN2 4
#define BIN1 12
#define BIN2 13
#define STBY 8
const int offsetA = 1;
const int offsetB = 1;
int echo = 6;
int trig = 5;
int tilt = 10;
int val = 0;
//int servo = 11;
int tilt_val = 0;
float duration_us, distance_cm;

Motor motor1 = Motor(AIN1, AIN2, PWMA, offsetA, STBY);
Motor motor2 = Motor(BIN1, BIN2, PWMB, offsetB, STBY);

void setup() {
  pinMode(trig, OUTPUT);
  pinMode(echo, INPUT);
//  myservo.attach(11);
//  pinMode(tilt, INPUT);
//  pinMode(servo, OUTPUT);

  Serial.begin(9600);
}

void loop() {
int tilt_read = digitalRead(tilt);
  int distance_read = digitalRead(echo);
 digitalWrite(trig, LOW);
 delayMicroseconds(2);
  digitalWrite(trig, HIGH);
  delayMicroseconds(100);
  digitalWrite(trig, LOW);
  duration_us = pulseIn(echo, HIGH);
  distance_cm = 0.017 * duration_us;
  val = map(duration_us, 0, 1023, 0, 255);
  tilt_val = map(tilt_read, 0, 1023, 0, 255);
  Serial.println(distance_cm);
//  Serial.println(tilt_val);

  if ((distance_cm <50) && (distance_cm > 30) ) {
   motor1.drive(200,10);
    motor2.drive(200,10);
  }
  else if (distance_cm > 50) {
    motor1.drive(250,10);
    motor2.drive(200,10);
}
  else{
    motor1.drive(200,10);
    motor2.drive(250,10);
  }
 //analogWrite(bluled,tilt_val);

}
